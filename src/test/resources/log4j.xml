<?xml version='1.0' encoding='ISO-8859-1' ?>
<!DOCTYPE log4j:configuration SYSTEM "./log4j.dtd">

<log4j:configuration>
    <appender name="CONSOLE-ALL" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%-5p] %c{2} - %m%n"/>
        </layout>
    </appender>

    <category name="org.mortbay" additivity="true">
        <priority value="INFO"/>
    </category>

    <category name="br.com.caelum" additivity="true">
        <priority value="DEBUG"/>
    </category>

    <category name="dojo" additivity="true">
        <priority value="DEBUG"/>
    </category>

    <root>
        <priority value="WARN"/>
        <appender-ref ref="CONSOLE-ALL"/>
    </root>
</log4j:configuration>
